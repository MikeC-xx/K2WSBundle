{% extends 'K2WSBundle::base.html.twig' %}

{% block title %}{{ 'layout.login'|trans }}{% endblock %}

{% block body %}
    <h1 class="text-center">Demo Web App</h1>

    <br />

    <form class="col-md-4 col-md-offset-4" action="{{ path('security_login_check') }}" method="post">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData) }}
            </div>
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" />
        </div>

        <button class="btn btn-success center-block" type="submit">{{ 'security.login.submit'|trans }}</button>
    </form>
{% endblock %}
